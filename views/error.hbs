<h1>Hiba adatai</h1>
<table class="table table-striped">
    <tr>
        <th>Hiba beküldésének ideje</th>
        <td>{{hiba.datum}}</td>
    </tr>
    <tr>
        <th>Hiba helye</th>
        <td>{{hiba.terem}}</td>
    </tr>
    <tr>
        <th>Hiba szövege</th>
        <td>{{hiba.leiras}}</td>
    </tr>
    <tr>
        <th>Állapot</th>
        <td>
            {{#if hiba.kesz}}
            <span class="text-success">Kész</span>
            {{else}}
            <span class="text-warning">Feldolgozásra vár</span>
            {{/if}}
        </td>
    </tr>
</table>
<div class="form-group">
  <div class="col-lg-12">
    <a href="/list" class="btn btn-default pull-left">Vissza</a>
    <a href="/delete/{{hiba.id}}" class="btn btn-danger pull-right">Törlés</a>
  </div>
</div>